# ============================================
# LogiTrack - Configuration Environnement
# ============================================

# Base de données MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=logitrack
DB_PORT=3306

# Serveur
PORT=3002
HTTPS_PORT=3443
NODE_ENV=development

# JWT - IMPORTANT: Changer en production !
JWT_SECRET=change_this_to_a_secure_random_key_at_least_32_chars
JWT_EXPIRES_IN=24h

# CORS - Origines autorisées (séparées par des virgules)
# En production, mettre les URLs exactes du frontend
CORS_ORIGINS=http://localhost:5173,http://localhost:3002

# Rate Limiting (requêtes par fenêtre de 15 min)
RATE_LIMIT_AUTH=20
RATE_LIMIT_API=300

# Socket.io
SOCKET_ENABLED=true

# Uploads
MAX_FILE_SIZE=10485760
