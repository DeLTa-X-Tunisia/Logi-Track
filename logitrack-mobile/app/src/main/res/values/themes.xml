<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Thème principal -->
    <style name="Theme.LogiTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_600</item>
        <item name="colorPrimaryDark">@color/primary_800</item>
        <item name="colorAccent">@color/primary_500</item>
        <item name="android:statusBarColor">@color/primary_800</item>
        <item name="android:navigationBarColor">@color/primary_900</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Thème Splash -->
    <style name="Theme.LogiTrack.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/splash_bg</item>
        <item name="android:statusBarColor">@color/primary_900</item>
        <item name="android:navigationBarColor">@color/primary_900</item>
        <item name="android:windowFullscreen">true</item>
        <item name="postSplashScreenTheme">@style/Theme.LogiTrack</item>
    </style>

</resources>
