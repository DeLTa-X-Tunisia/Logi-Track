<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- En-tÃªte -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/app_name"
            android:textColor="@color/primary_800"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:text="@string/config_header"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:gravity="center" />

        <!-- === Section DÃ©couverte Automatique === -->
        <LinearLayout
            android:id="@+id/discovery_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”  DÃ©couverte automatique"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_700" />

            <ProgressBar
                android:id="@+id/progress_discovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:indeterminateTint="@color/primary_500" />

            <TextView
                android:id="@+id/tv_discovery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="@string/discovery_searching"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_found_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary_700"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_use_found"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:text="@string/btn_connect_server"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_primary"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_retry"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="@string/btn_retry"
                android:textSize="14sp"
                android:textColor="@color/primary_600"
                android:background="@drawable/btn_outline"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="#E5E7EB" />

            <Button
                android:id="@+id/btn_manual"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/btn_manual_config"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>

        <!-- === Section Configuration Manuelle === -->
        <LinearLayout
            android:id="@+id/manual_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="24dp"
            android:elevation="4dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš™ï¸  Configuration manuelle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/manual_instructions"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Adresse IP du serveur"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_server_ip"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_bg"
                android:hint="Ex: 192.168.1.100"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Port (par dÃ©faut : 3002)"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_server_port"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_bg"
                android:hint="Port (par dÃ©faut : 3002)"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="3002"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:text="@string/btn_test_connect"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_primary" />

            <Button
                android:id="@+id/btn_back_to_auto"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:text="@string/btn_back_auto"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="@string/version_text"
            android:textColor="#9CA3AF"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>
